{
  "name": "task-genie-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api": "npm run --prefix packages/task-genie-api",
    "api:build": "npm run --prefix packages/task-genie-api build",
    "api:start": "npm run --prefix packages/task-genie-api start",
    "api:dev": "npm run --prefix packages/task-genie-api start:dev",
    "orchestrator": "npm run --workspace=task-genie-orchestrator",
    "frontend": "npm run --workspace=task-genie-frontend"
  }
}